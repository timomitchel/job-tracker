<h3>Add a Contact</h3>

<%= form_for [@company, @comment] do |f| %>
  <p>
    <%= f.label :name %><br/>
    <%= f.text_area :name %>
  </p>
  <p>
    <%= f.label :position %><br/>
    <%= f.text_area :position %>
  </p>
  <p>
    <%= f.label :email %><br/>
    <%= f.text_area :email %>
  </p>
  <p>
    <%= f.submit 'Submit' %>
  </p>
<% end %>